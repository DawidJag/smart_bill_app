#:import Clock kivy.clock.Clock

<TextInput>:
    padding: ['5dp','5dp','5dp','5dp']

<PopContent>:
    input_label: inside_text
    Label:
        id: inside_text
        multiline: False
        valign: 'middle'
        halign: 'center'
        text_size: self.size
        padding: ['5dp','5dp']
        size_hint: 1,1
        pos_hint: {"x": 0.2, "top": 1}

<RoundedButton@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            #rgba: (0.5,0.5,0.5,1) if self.state=='normal' else (0.3,0.6,0.7,1)  # visual feedback of press
            rgba: (0,0,0,0.5) if self.state=='normal' else (0.3,0.6,0.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [18,2,18,2]


<RoundedLeftTopButton@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            #rgba: (0.5,0.5,0.5,1) if self.state=='normal' else (0.3,0.6,0.7,1)  # visual feedback of press
            rgba: (0,0,0,0.5) if self.state=='normal' else (0.3,0.6,0.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [40,2,2,2]

<RoundedRightBottomButton@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            #rgba: (0.5,0.5,0.5,1) if self.state=='normal' else (0.3,0.6,0.7,1)  # visual feedback of press
            rgba: (0,0,0,0.5) if self.state=='normal' else (0.3,0.6,0.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [2,2,40,2]

<RectangleButton@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            #rgba: (0.5,0.5,0.5,1) if self.state=='normal' else (0.3,0.6,0.7,1)  # visual feedback of press
            rgba: (0,0,0,0.5) if self.state=='normal' else (0.3,0.6,0.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [2,2,2,2]

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0


