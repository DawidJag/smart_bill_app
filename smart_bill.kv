                        size_hint: 0.3, 0.05
                        halign: 'right'
                        valign: 'middle'
                        text_size: self.size

                    TextInput:
                        id: category
                        hint_text: 'e.g. food, transport'
                        multiline: False
                        pos_hint: {"x":0.4, "top":0.6}
                        size_hint: 0.5, 0.05

                    Label:
                        text: 'Comments: '
                        pos_hint: {"x":0.1, "top":0.55}
                        size_hint: 0.3, 0.05
                        halign: 'right'
                        valign: 'middle'
                        text_size: self.size

                    TextInput:
                        id: remarks
